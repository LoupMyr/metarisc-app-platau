{% extends 'layouts/index.twig' %}

{% if profil['connected'] %}
	{% set options = 
        "<option value='vrai' selected='selected'>Connecté</option>
       <option value='faux'>Déconnecté</option>" 
  %}
{% else %}
	{% set options = 
        "<option value='vrai'> Connecté</option>
        <option value='faux' selected='selected'>Déconnecté</option>" 
    %}
{% endif %}

{% use 'layouts/navbar.twig' %}
{% block content %}
	<div class="container mt-3 pb-3">
		<h1 class="text-center mb-4">Bienvenue
			{{ profil['first_name'] }}
			!</h1>
		<div class="d-flex flex-wrap justify-content-center">
			<div class="col-lg-4 p-3">
				<a href="/notifications" class="btn border bg-light p-3 w-100">
					<p class="fs-5 fw-bold">Notifications</p>
					<span>Voir la liste de mes notifications</span>
				</a>
			</div>
			<div class="col-lg-4 p-3">
				<a href="/dossiers" class="btn border bg-light p-3 w-100">
					<p class="fs-5 fw-bold">Dossiers</p>
					<span>Voir la liste de mes dossiers</span>
				</a>
			</div>
			<div class="col-lg-4 p-3">
				<a href="/organisation" class="btn border bg-light p-3 w-100">
					<p class="fs-5 fw-bold">Organisation</p>
					<span>Rechercher une organisations</span>
				</a>
			</div>
			<div class="col-lg-4 p-3">
				<a href="/evenements" class="btn border bg-light p-3 w-100">
					<p class="fs-5 fw-bold">Evenements</p>
					<span>Voir la liste des evenements</span>
				</a>
			</div>
		</div>
		<div class="d-flex flex-wrap justify-content-center text-center mt-5">
			<form action='/home' method='POST' class="border border-dark p-4">
				<div class="py-2">
					<label class="form-label" for='connect'>Etat:</label>
					<select class="form-select" id="connect" name="connect">
						{{options|raw}}
					</select>
				</div>
				<div class="py-2">
				<label class="form-label" for='email'>Email:</label>
					<input disabled class="form-control" type="email" name="email" id="email" value={{profil['email']}}>
				</div>
				<div class="py-2">
				<label class="form-label" for='idPlatau'>Identifiant Plat'au:</label>
					<input class="form-control" type="text" name="idPlatau" id="idPlatau" value={{profil['idPlatau']}}>
				</div>
				<div class="py-2">
					<input class="btn btn-secondary" type="submit" value="Envoyer" name="btnEnvoyer"/>
				</div>
			</form>
		</div>
	</div>
{% endblock %}